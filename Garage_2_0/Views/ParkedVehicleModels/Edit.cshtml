@model Garage_2_0.Models.ParkedVehicleModel

@{
    ViewData["Title"] = "Ändra detaljer för ett parkerat fordon";
}

    <h1>Ändra detaljer för ett parkerat fordon</h1>

@*<h4>Ändra detaljer för ett parkerat fordon</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegNr" class="control-label"></label>
                <input asp-for="RegNr" class="form-control" />
                <span asp-validation-for="RegNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoWheels" class="control-label"></label>
                <input asp-for="NoWheels" class="form-control" />
                <span asp-validation-for="NoWheels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FreeText" class="control-label"></label>
                <input asp-for="FreeText" class="form-control" />
                <span asp-validation-for="FreeText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParkedIn" class="control-label"></label>
                <input asp-for="ParkedIn" class="form-control" />
                <span asp-validation-for="ParkedIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParkedOut" class="control-label"></label>
                <input asp-for="ParkedOut" class="form-control" />
                <span asp-validation-for="ParkedOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till lista över parkerade fordon</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
